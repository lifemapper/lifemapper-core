#!/bin/bash

# This script is run during the post section of the roll installation
# It relies on the exported directory /share/lm (LMDISK) 
#   so must be executed after mount

# 
SOLR_HOME=@SOLRDATA@/data
LM_CONFIG=@LMHOME@/config

if [ -d $LM_CONFIG/solrcores ]; then
    cp -rp $LM_CONFIG/solrcores/*    $SOLR_HOME/cores/
    # set owner of newly installed cores
    /bin/chown -R @SOLRUSER@:@SOLRUSER@ $SOLR_HOME
else
    echo 'No solrcores in $LM_CONFIG to copy to $SOLR_HOME'
fi

